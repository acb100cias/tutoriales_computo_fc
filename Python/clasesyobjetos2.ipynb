from matplotlib.pyplot import *

In [40]:
class Punto:
    def __init__(self,x,y):
        self.x=x
        self.y=y
    def ne(self):
        return ((self.x**2)+(self.y**2))**0.5
    def info(self):
        return "({0}, {1})".format(self.x,self.y)
    def PM(self,blanco):
        mx=(self.x+blanco.x)/2
        my=(self.y+blanco.y)/2
        return Punto(mx,my)
    def gr(self):
        return plot(self.x,self.y,'o')

